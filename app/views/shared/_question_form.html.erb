<%= form_for (@question) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">

  <div class="field">
    <%= f.text_field :why, placeholder: "Compose new why question..." %>
  </div>

  <div class="field">
    <%= f.text_field :how, placeholder: "Compose new how question..." %>
  </div>

  <div class="field">
    <%= f.text_field :what, placeholder: "Compose new what question..." %>
  </div>
  <%= f.submit "Create Question", class: "btn btn-large btn-primary" %>
<% end %>
